{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/block-dangerous.sh",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/enforce-policy.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Edit|Write|Task",
        "hooks": [
          {
            "type": "command",
            "command": "python hooks/log-activity.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/auto-lint.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(echo:*)",
      "Bash(git status)",
      "Bash(git diff)"
    ]
  }
}
